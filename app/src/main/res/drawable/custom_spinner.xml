<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list>

            <item>
                <shape>
                    <corners android:radius="5dp" />
                    <stroke android:width="5px" android:color="@android:color/darker_gray" />
                    <solid android:color="@android:color/transparent" />
                    <padding android:right="10dp"
                        android:left="10dp"/>
                </shape>
            </item>
            <item>
                <bitmap  android:src="@drawable/ic_spinner" android:gravity="end">

                </bitmap>
            </item>

        </layer-list>


    </item>

    <item android:state_focused="false">
        <layer-list>

            <item>
                <shape>
                    <corners android:radius="5dp" />
                    <stroke android:width="5px" android:color="@color/colorToolbarTyke" />
                    <solid android:color="@android:color/transparent" />
                    <padding android:right="10dp"
                        android:left="10dp"/>
                </shape>
            </item>
            <item>
                <bitmap  android:src="@drawable/ic_spinner_primary" android:gravity="end">

                </bitmap>
            </item>

        </layer-list>


    </item>


</selector>